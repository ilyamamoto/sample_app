<a href="<%= user_path(@user) %>">
	<%= gravatar_for @user, size: 52 %>
</a>
<h1>
	<%= @user.name %>
</h1>
<% if current_user?(@user) && root_path == request.fullpath %>
	<span>
		<%= link_to "view my profile", @user %>
	</span>
<% end %>
<span id="micropost_count">
	<%= pluralize(@user.microposts.count, "micropost") %>
</span>

